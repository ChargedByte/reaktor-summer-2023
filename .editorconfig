root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Kotlin files
[*.kt]
indent_size = 4

# Kotlin script files
[*.kts]
indent_size = 4
